<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorbg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/htlIDET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="ENTER HOTEL ID"
        android:inputType="text"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/htlNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/htlIDET"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:hint="ENTER HOTEL NAME"
        android:inputType="text"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark" />

    <EditText
        android:id="@+id/htlnoET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/htlNameET"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:hint="ENTER HOTEL NO"
        android:inputType="text"
        android:maxLength="20"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/b1"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/htlnoET"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="19dp"
        android:background="@color/colorPrimary"
        android:onClick="addvalues"
        android:text="Click To Add Values"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b2"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/htlnoET"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="81dp"
        android:background="@color/colorPrimary"
        android:onClick="COLLECTIONDELETE"
        android:text="Delete Doucment"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b3"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/b1"
        android:layout_centerInParent="true"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:onClick="SHOWDATA"
        android:text="Show Collection"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_below="@id/b3"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        />

</RelativeLayout>